@using System.Drawing
@model IEnumerable<CinemaScopeWeb.ViewModels.AboutUsViewModel>
@{
    ViewBag.Title = "About Us";
}

@section Styles
{
    <style>
        img {
            width: 250px;
            height: 350px
        }
    </style>
}

<h2>About Us</h2>
<br />
@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
{
    @Html.ActionLink("Create", "Create", "AboutUs", new { area = "" }, new { @class = "btn btn-info" })
}
<br />
<br />
@foreach (var item in Model)
{

    @Html.Raw("<img id=\"show\" src=\"data:image/jpeg;base64," +
                                                     Convert.ToBase64String(item.Image) + "\" />")
    <h3>@item.Name</h3>
    <br />
    foreach (var point in item.Description.Replace("\r", "").Split('\n'))
    {
        <h3>@point</h3>
    }
    <br />
    if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Edit", "Edit", "AboutUs", new { id = item.Id }, new { @class = "btn btn-info" })
        <br />
        @Html.ActionLink("Delete", "Delete", "AboutUs", new { id = item.Id }, new { @class = "btn btn-info" })
    }
    <br />
    <br />

}