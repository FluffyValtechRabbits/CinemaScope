@model CinemaScopeWeb.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "UserProfile";
}

<h2>UserProfile</h2>
<br />
<br />
<h4>@Html.LabelFor(m => m.FirstName)</h4>
<h4>@Model.FirstName</h4>
<br />
<h4>@Html.LabelFor(m => m.LastName)</h4>
<h4>@Model.LastName</h4>
<br />
<h4>@Html.LabelFor(m => m.UserName)</h4>
<h4>@Model.UserName</h4>
<br />
<h4>@Html.LabelFor(m => m.Email)</h4>
<h4>@Model.Email</h4>
<div class="row accordion-item p-0 m-0" style="background-color: #fffbf0; color: #2d2d2d ">
    <h4 class="accordion-header" id="flush-headingOne">
        <button style="outline: none; box-shadow: none; 
                       background-color: #fffbf0; color: #2d2d2d" 
                class="accordion-button collapsed" 
                type="button"
                data-bs-target="#flush-collapseOne" 
                aria-expanded="False" aria-controls="flush-collapseOne">
            Watched Movies:
        </button>
    </h4>
    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body row">
            @{
                foreach (var movie in Model.WatchedMovies)
                {
                    <div class="col-2 m-3 p-1">
                        <div class="row justify-content-around">
                            <img class="btn p-0" src="@movie.Poster" style="width:150px;height:250px;" alt="" />
                        </div>
                        <div class="row justify-content-center">
                            <div align="center">
                                <h4>@Html.ActionLink(movie.Title, "Get", "Movies", new { Id = movie.Id }, new { @class = "p-0 text-black text-decoration-none" })</h4>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
<div class="row accordion-item collapsed p-0 m-0" style="background-color: #fffbf0; color: #2d2d2d ">
    <h4 class="accordion-header collapsed" id="headingTwo">
        <button style="outline: none; box-shadow: none; background-color: #fffbf0; color: #2d2d2d"
            class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="False" aria-controls="collapseOne">
            Liked Movies:
        </button>
    </h4>
    <div id="collapseTwo" class="accordion-collapse collapsed show" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
        <div class="accordion-body row">
            @{
                foreach (var movie in Model.LikedMovies)
                {
                    <div class="col-2 m-3 p-1">
                        <div class="row justify-content-around">
                            <img class="btn p-0" src="@movie.Poster" style="width:150px;height:250px;" alt=""/>
                        </div>
                        <div class="row justify-content-center">
                            <div align="center">
                                <h4 >@Html.ActionLink(movie.Title, "Get", "Movies", new { Id = movie.Id }, new{@class = "p-0 text-black text-decoration-none"})</h4>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
<div class="row accordion-item collapsed p-0 m-0" style="background-color: #fffbf0; color: #2d2d2d ">
    <h4 class="accordion-header collapsed" id="headingThree">
        <button style="outline: none; box-shadow: none; background-color: #fffbf0; color: #2d2d2d"
            class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="False" aria-controls="collapseOne">
            Disliked Movies:
        </button>
    </h4>
    <div id="collapseThree" class="accordion-collapse collapsed show" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
        <div class="accordion-body row">
            @{
                foreach (var movie in Model.DislikedMovies)
                {
                    <div class="col-2 m-3 p-1">
                        <div class="row justify-content-around">
                            <img class="btn p-0" src="@movie.Poster" style="width:150px;height:250px;" alt="" />
                        </div>
                        <div class="row justify-content-center">
                            <div align="center">
                                <h4>@Html.ActionLink(movie.Title, "Get", "Movies", new { Id = movie.Id }, new { @class = "p-0 text-black text-decoration-none" })</h4>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
<br/>
<br/>